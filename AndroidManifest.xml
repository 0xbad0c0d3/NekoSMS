<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crossbowffs.nekosms">
    <permission
        android:name="${applicationId}.permission.RECEIVE_BLOCKED_SMS"
        android:label="@string/receive_sms_permission_label"
        android:description="@string/receive_sms_permission_description"
        android:protectionLevel="signature"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="${applicationId}.permission.RECEIVE_BLOCKED_SMS"/>
    <application
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="true">
        <activity
            android:name=".app.FilterListActivity"
            android:launchMode="singleTop"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".app.FilterEditorActivity"
            android:label="@string/filter_editor">
        </activity>
        <activity
            android:name=".app.BlockedSmsListActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".app.FilterListActivity"
            android:label="@string/blocked_messages">
        </activity>
        <activity
            android:name=".app.SettingsActivity"
            android:label="@string/settings">
        </activity>
        <provider
            android:name=".provider.NekoSmsProvider"
            android:label="NekoSmsProvider"
            android:authorities="${applicationId}.provider"
            android:readPermission="android.permission.READ_SMS"
            android:writePermission="android.permission.WRITE_SMS"
            android:exported="true"/>
        <receiver
            android:name=".app.BlockedSmsReceiver">
            <intent-filter>
                <action android:name="${applicationId}.action.RECEIVE_BLOCKED_SMS"/>
                <action android:name="${applicationId}.action.DELETE_BLOCKED_SMS"/>
                <action android:name="${applicationId}.action.RESTORE_BLOCKED_SMS"/>
            </intent-filter>
        </receiver>
        <meta-data
            android:name="xposedmodule"
            android:value="true"/>
        <meta-data
            android:name="xposeddescription"
            android:value="Pattern-based text message blocking for Android 4.4+"/>
        <meta-data
            android:name="xposedminversion"
            android:value="2"/>
    </application>
</manifest>
