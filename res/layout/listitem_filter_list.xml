<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <TextView
        android:id="@+id/listitem_filter_list_pattern_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/listitem_filter_list_field_textview"
        android:layout_below="@id/listitem_filter_list_pattern_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/listitem_filter_list_mode_textview"
        android:layout_below="@id/listitem_filter_list_field_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/listitem_filter_list_case_sensitive_textview"
        android:layout_below="@id/listitem_filter_list_mode_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="18sp"/>
</RelativeLayout>
